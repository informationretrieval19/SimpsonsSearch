@model SimpsonsSearch.searchEngine.SearchResults;
@{
    ViewData["Title"] = "Results";
}

<div class="container">
    @await Html.PartialAsync("_searchForm", new SimpsonsSearch.Models.SearchformModel())
</div>
<table id="results">
    <tr class="spaceUnder">
        <th scope="col"></th>
        <th scope="col">EpisodeId</th>
        <th scope="col">SceneId</th>
        <th class="Episode" scope="col">Episode</th>
        <th scope="col">Season</th>
        <th scope"col">Timespamp</th>
        <th class="Text" scope="col">Text</th>
        <th class="Actor" scope="col">Location</th>
        <th class="ID" scope="col">Characters</th>
        <th class="Score" scope="col">Score</th>
        <th class="collapse multi-collapse" id="evaluationtable" scope="col">Evaluation</th>
    </tr>

    @{int counter = 0;}
    @foreach (var hit in Model.Hits)
    {
        { counter++; }
        <tr class="Entry">
            <th>@counter </th>
            <th>@hit.EpisodeId</th>
            <th> @hit.Id</th>
            <td>  @hit.EpisodeName</td>
            <td> Season:@hit.Season Episode: @hit.EpisodeInSeason</td>
            <td>@hit.Timestamp</td>
            <td> @hit.Text</td>
            <td> @hit.Location </td>
            <td> @hit.Person</td>
            <td>@hit.Score</td>
            <td>
                <div>
                    <div class="form-inline">
                        <button class="btn btn-warning" type="submit" value="@hit.Id" data-value="@Model.TopicName" id="logGoodBtn" onclick="return logGoodResult();">+</button>
                    </div>
                    <div class="form-inline">
                        <button class="btn btn-warning" type="submit" value="@hit.Id" data-value="@Model.TopicName" id="logBadBtn" onclick="return logBadResult();">-</button>
                    </div>
                </div>
            </td>
        </tr>
    }
</table>

@section Scripts {
    <script>
        function logBadResult() {
            var url = "@Url.Action("LogBadResult")";

            var buttom = document.querySelector("#logBadBtn");
            var TopicName = buttom.getAttribute("data-value");

            var id = $('#logBadBtn').val();
           
            $.get(url, { id: id, TopicName: TopicName  }, function () {   
                alert("Evaluation got logged!");
            });
        }

        function logGoodResult() {
            var url = "@Url.Action("LogGoodResult")";

            var buttom = document.querySelector("#logGoodBtn");
            var TopicName = buttom.getAttribute("data-value");

            var id = $('#logGoodBtn').val();
           
            $.get(url, { id: id, TopicName: TopicName  }, function () {   
                alert("Evaluation got logged!");
            });
        }
    </script>
}