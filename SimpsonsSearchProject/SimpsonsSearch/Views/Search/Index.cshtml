@{
}

<!-- Search form -->

    


<form method="post" asp-controller="Search" asp-action="Results">

    <div><label>Search</label> <input type="text" asp-for="SearchQuery" /></div>
  <input type="submit" name="save" value="Save" />
</form>
<table class="table table-bordered table-striped table-dark">
    <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">Klasse</th>
    </tr>
    
    @foreach (var scriptLine in Model.ScriptLines)
    {
          
        <tr>
            <th scope="row"></th>
            <td> @scriptLine.id</td>
            <td> @scriptLine.raw_text</td>
            <td>
                <a class="btn btn-dark" asp-action="" asp-route-id="">Details</a>
            </td>
        </tr>
    }       
</table>